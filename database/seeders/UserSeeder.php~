    {
        // Create Super Admin User
        User::create([
            'id' => 5,
            'name' => 'SuperAdminUser',
            'email' => 'superadmin@admin.com',
            'password' => Hash::make('superpassword'),
            'role' => 'Super Admin',
            'is_active' => 1,
        ]);

        // Create a user
        User::create([
            'id' => 1,
            'name' => 'Author1',
            'email' => 'author@author1.com',
            'password' => Hash::make('password'),
            'role' => 'author',
            'is_active' => 1,
        ]);

        // Create author User 2
        User::create([
            'id' => 2,
            'name' => 'author2',
            'email' => 'author@author2.com',
            'password' => Hash::make('password'),
            'role' => 'author',
            'is_active' => 1,
        ]);

        // Create Regular User 1
        User::create([
            'id' => 3,
            'name' => 'User1',
            'email' => 'user1@user.com',
            'password' => Hash::make('password'),
            'role' => 'User',
            'is_active' => 1,
        ]);

        // Create Regular User 2
        User::create([
            'id' => 4,
            'name' => 'User2',
            'email' => 'user2@user.com',
            'password' => Hash::make('password'),
            'role' => 'User',
            'is_active' => 1,
        ]);
